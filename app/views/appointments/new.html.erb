<div class="container">
  <div class="row">
    <!-- Card Projects -->
    <div class="col-md-6 col-md-offset-3">
      <div class="card">
        <div class="card-image">
          <%= image_tag("/img/appointments.jpg", class: "img-responsive") %>
          <span class="card-title">New Appointment</span>
        </div>
        <%= form_tag appointments_path do %>
          <div class="card-content">

            <%= label :appointment, :description, 'Description' %>
            <%= text_field :appointment, 'description' %>
            <br>
            <%= label :appointment, :office_name, 'Care Provider' %>
            <%= select :appointment, :office_name, @care_providers %>
            <br>
            <%= label :appointment, :start, 'Start Date' %>
            <%= datetime_select :appointment, :start %>
            <br>
            <%= label :appointment, :end, 'End Date' %>
            <%= datetime_select :appointment, :end %>

          </div>

          <div class="card-action">
            <%= submit_tag 'Save Changes', :class => 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>