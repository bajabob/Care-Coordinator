
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="card">
        <div class="card-image">
          <%= image_tag("/img/appointments.jpg", class: "img-responsive") %>
          <span class="card-title">All Care Providers</span>
        </div>
          <div class="card-content">
            <table>
              <thead>
              <tr>
              <th>Office Name</th>
             
              </tr>
              </thead>
              <tbody>
                <% @providers.each do |provider| %>
                  <tr>
                    <td>
                      <%= provider.office_name  %>
                    </td>
                    <td>
                      <%= link_to 'More Info', provider_path(provider), :class => 'btn btn-primary', :id => 'provider_'+provider.id.to_s %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <div class="card-action">
          <%= link_to 'New Care Provider', new_provider_path, :class => 'btn btn-primary btn-block' %>
        </div>
      </div>
    </div>
  </div>
</div>

