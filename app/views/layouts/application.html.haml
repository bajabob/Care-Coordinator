!!!
%html
  %head
    %title Care Coordinator
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %h1.title Care Coordinator
    =link_to "Daily", appointments_daily_path, :class => "button"
    =link_to "Weekly", appointments_weekly_path, :class => "button"
    =link_to "Monthly", appointments_monthly_path, :class => "button"
    #main
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]

      = yield
