  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Care Coordinator</title>
  <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag 'bootstrap' %>
